#include <iostream>
#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main() {
    ios_base::sync_with_stdio(false); cin.tie(0);
	int t;
	std::cin >> t;
	while(t--)
	{ int N,x,k;
	 cin>>N>>x>>k;
	 if(N+1<x)
	   cout<<"NO\n";
	   
	 else if(x%k==0)
	  std::cout << "YES" << std::endl;
	 else if((N+1-x)%k==0)
	  cout<<"YES\n";
	 else
	  cout<<"NO\n";
	}
	return 0;
}
